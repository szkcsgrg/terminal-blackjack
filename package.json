{
  "name": "terminal-blackjack",
  "version": "1.0.0",
  "description": "A fully-featured, interactive blackjack game built for the terminal with beautiful ASCII card art and comprehensive logging",
  "main": "blackjack.js",
  "type": "module",
  "scripts": {
    "start": "node blackjack.js",
    "play": "node blackjack.js",
    "log": "cat blackjack.log",
