  "license": "MIT",
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^5.5.0",
    "inquirer": "^12.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/szkcsgrg/terminal-blackjack.git"
  },
