    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "blackjack",
    "terminal",
    "game",
    "casino",
    "cards",
    "ascii",
    "cli",
    "interactive",
    "nodejs"
  ],
